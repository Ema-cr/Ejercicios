Ejercicios Riwi
Ejercicio #1

Algoritmo 
	Definir numeros Como Entero
	Definir i, suma Como Entero
	Dimensionar numeros[5]
	Para i <- 1 Hasta 5 Con Paso 1 Hacer
		Escribir "Ingresa el numero", i, ":"
		Leer numeros[i]
	FinPara
	Escribir "Los numeros ingresados son:"
	Para i <- 1 Hasta 5 Con Paso 1 Hacer
		Escribir "Numero ", i, ":", numeros[i]
	FinPara
FinAlgoritmo


Ejercicio #2

Algoritmo 
	Definir numeros Como Entero
	Definir i, suma Como Entero
	Dimensionar numeros[5]
	Para i <- 1 Hasta 5 Con Paso 1 Hacer
		Escribir "Ingresa los numeros ", i, ":"
		Leer numeros[i]
		Si numeros[i] > mayor Entonces
			mayor <- numeros[i]
		FinSi
	FinPara
	
	Escribir  "El numero mayor es: ", mayor
FinAlgoritmo


Ejercicio #3

Algoritmo 
	Definir numeros Como Entero
	Definir i, suma Como Entero
	Dimensionar numeros[5]
	Para i <- 1 Hasta 5 Con Paso 1 Hacer
		Escribir "Ingresa los numeros ", i, ":"
		Leer numeros[i]
	FinPara
	suma <- 0
	Para i <- 1 hasta 5 Con Paso 1 Hacer
		suma <- suma + numeros[i]
	FinPara
	Escribir  " El promedio es: ", suma/5
FinAlgoritmo


Ejercicio #5

Algoritmo 
	Definir numeros Como Entero
	Definir i, suma Como Entero
	Dimension numeros[5]
	Para i <- 1 hasta 5 Con Paso 1 Hacer
		Escribir  "ingresa el numero ", i ,": "
		Leer numeros[i]
	FinPara
	Para i <-5 Hasta 1 Con Paso -1 Hacer
		Escribir numeros[i]
	Fin Para
	FinAlgoritmo
