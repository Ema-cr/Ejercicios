while True:
    try:
        Numero = int(input("Ingresa un numero,Porfavor: "))
        break
    except ValueError:
        print("Error!, Debes ingresar un numero entero. ")
Doble = Numero * 2
print (f"El doble de {Numero} es {Doble} ")
Triple = Numero * 3
print (f"El triple de {Numero} es {Triple} ")
